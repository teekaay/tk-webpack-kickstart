{
  "name": "webpack-react-kickstart",
  "version": "2.0.0",
  "description": "Webpack kickstarter for React, Enzyme and Jest",
  "author": "Thomas Klinger",
  "repository": "https://github.com/teekaay/tk-webpack-kickstart",
  "license": "MIT",
  "main": "dist/bundle.js",
  "pre-commit": [
    "lint",
    "test"
  ],
  "scripts": {
    "test": "./node_modules/.bin/jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage --coverageDirectory reports",
    "lint": "./node_modules/.bin/eslint -c eslintrc.js --format table src/**/*.js",
    "bundle:dist": "NODE_ENV=production ./node_modules/.bin/webpack",
    "bundle:profile": "./node_modules/.bin/webpack --profile --json > build-stats.json",
    "bundle:dev": "./node_modules/.bin/webpack-dev-server --inline --hot --colors --info --history-api-fallback --watch --content-base ./"
  },
  "dependencies": {
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^0.28.4",
    "enzyme": "^2.9.1",
    "eslint": "^4.2.0",
    "eslint-plugin-react": "^7.1.0",
    "file-loader": "^0.11.2",
    "jest": "^20.0.4",
    "jest-enzyme": "^3.5.3",
    "pre-commit": "^1.2.2",
    "react-hot-loader": "^1.3.1",
    "react-test-renderer": "^15.6.1",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.2.0",
    "webpack-dev-server": "^2.5.1"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "testRegex": ".*.spec.js$",
    "bail": false,
    "verbose": true,
    "notify": true
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ]
  }
}
